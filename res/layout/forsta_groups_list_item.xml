<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView android:id="@+id/forsta_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="An Item"/>
        <TextView android:id="@+id/forsta_group_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="An Item Phone"
            style="@style/ForstaSmallText"/>
        <TextView android:id="@+id/forsta_group_slug"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="An Item Phone"
                  style="@style/ForstaSmallText"/>
        <TextView android:id="@+id/forsta_group_members"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="An Item Phone"
                  style="@style/ForstaSmallText"/>
    </LinearLayout>
</RelativeLayout>