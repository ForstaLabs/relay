<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:orientation="horizontal"
              android:background="@drawable/conversation_recipients_widget"
    android:padding="5dp">
    <TextView
        android:id="@+id/selected_recipient_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="john.bigboote"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="5dp"
        android:padding="0dp"
        />
    <ImageButton
        android:id="@+id/selected_recipient_remove"
        android:padding="0dp"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_menu_remove_holo_light"/>
</LinearLayout>