<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:background="@drawable/conversation_recipients_widget"
                  android:paddingTop="3dp" android:paddingBottom="3dp" android:paddingLeft="10dp" android:paddingRight="10dp">
        <TextView
            android:id="@+id/selected_recipient_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/forsta_accent4"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp"
            android:padding="0dp"
            />
        <ImageButton
            android:id="@+id/selected_recipient_remove"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_clear_white_24dp"/>
    </LinearLayout>

</merge>