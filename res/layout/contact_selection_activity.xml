<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_gravity="center"
              android:layout_height="fill_parent"
              android:layout_width="fill_parent"
              android:orientation="vertical"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <io.forsta.securesms.components.ContactFilterToolbar
            android:id="@+id/toolbar"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarStyle" />


    <fragment android:id="@+id/contact_selection_list_fragment"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:name="io.forsta.securesms.ContactSelectionListFragment" />

    <ProgressBar
        android:id="@+id/contact_search_progress"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:visibility="gone"
        android:background="@android:color/transparent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/forsta_accent"
        android:padding="5dp">
        <LinearLayout
            android:id="@+id/contact_expression_elements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/gray20">
        <io.forsta.ccsm.components.SelectedRecipient
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp" />
            <io.forsta.ccsm.components.SelectedRecipient
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp" />
        </LinearLayout>

        <TextView android:id="@+id/forsta_input_recipient_expression"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:textColor="@color/textsecure_primary"/>
        <ImageButton
            android:id="@+id/contact_selection_confirm_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/check"
            android:background="@drawable/rounded_button"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
</LinearLayout>