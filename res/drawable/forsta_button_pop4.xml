<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/forsta_accent"/>
            <corners android:radius="3dp" />
            <stroke android:width="10dp" android:color="@color/transparent" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/forsta_pop4" />
            <corners android:radius="3dp" />
            <stroke android:width="10dp" android:color="@color/transparent" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
</selector>